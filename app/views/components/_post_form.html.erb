<div class="card post-form-card">
    <div class="card-block row">

        <div class="col-sm-1">
              <img src="/avatar.png" class="rounded-img"></img>
        </div>
        <div class="clo-sm-11">
             <%= form_for (@newPost) do |f| %>

				<center>
  					<div class="field" style="margin-left: 10px;">
    					<%= f.text_field :content, autofocus: true, class: "form-control" %>
    					<span class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
 					</div>
				</center> 
			<% end %>
        </div>    
    </div>
</div>


